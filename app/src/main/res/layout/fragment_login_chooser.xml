<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/pastelBlue"
    android:id="@+id/login_switcher_id"
    tools:context="com.hostitwise.pokemommas.LoginChooser">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/pastelBlue"
        android:padding="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:padding="10dp"
            android:text="@string/login_choice"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>

        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/rounded_button_settings"
            android:text="@string/login_button_generic"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:textColor="@android:color/black"
            android:onClick="switchLogins"/>
    </LinearLayout>

</FrameLayout>
